// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. 用户表
model User {
  id        String   @id @default(uuid()) // 自动生成 UUID
  email     String   @unique
  password  String   // 存加密后的哈希值
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关系：一个用户可以创建很多行程
  trips     Trip[]
}

// 2. 行程表
model Trip {
  id          String   @id @default(uuid())
  title       String
  destination String?  // 目的地名称
  startDate   DateTime
  endDate     DateTime
  description String?
  isPublic    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 关系：行程属于谁
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  days        TripDay[]
}

model TripDay {
  id        String   @id @default(uuid())
  dayIndex  Int      // 第几天 (0, 1, 2...)
  date      DateTime // 具体日期
  
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  
  activities TripActivity[] // 这一天里的活动
}

model TripActivity {
  id          String   @id @default(uuid())
  title       String   // 活动名称 (e.g. 参观雷门)
  description String?  // 备注
  startTime   DateTime?
  endTime     DateTime?
  location    String?  // 地点名称或坐标 JSON
  price       Float?   // 预算
  
  tripDayId   String
  tripDay     TripDay  @relation(fields: [tripDayId], references: [id], onDelete: Cascade)
}